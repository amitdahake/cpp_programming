
#include <iostream>
using namespace std;
int main(){

    //declaring variables

  double rad, vol, cube_rad;

  // entering the radius value

  cout<<"enter the radius of sphere: "<<endl;
  cin>>rad;

  //using sphere volume formula

  cube_rad = rad*rad*rad;
  vol = (4*3.14*cube_rad)/3;

  cout<<"Input the radius of a sphere : "<<rad<<endl;
  cout<<"The volume of a sphere is : "<<vol<<endl;


return 0;
}
