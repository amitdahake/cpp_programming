#include <iostream>
using namespace std;
int main(){
    int a, b;
    a = 5;
    b = 7;

    cout<<"Display arithmetic operations with mixed data type :\n";
    cout<<"---------- -----------------------------------------------\n";
    cout<<"the add of "     << a << " + " << b <<":"<< a+b<<endl;
    cout<<"the sub of "     << a << " - " << b <<":"<< a-b<<endl;
    cout<<"the multi of "   << a << " * " << b <<":"<< a*b<<endl;
    cout<<"the div of "     << a << " / " << b <<":"<< a/b<<endl;
    cout<<"the reminder of "<< a << " % " << b <<":"<< a%b<<endl;

return 0;
}

