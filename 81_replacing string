
#include <iostream>
using namespace std;
    int main(){

    string line, find_word, replace_word;
    cout<<"enter a phrase:"<<endl;
    getline(cin,line);
    cout<<endl;

    cout<<"enter which word you want to replace_: ";
    getline(cin,find_word);
    cout<<endl;
    cout<<"with which word: ";
    getline(cin,replace_word);
    cout<<endl;
    line.replace(line.find(find_word),find_word.length(),replace_word);

    cout<<"the change phrase: "<<endl;
    cout<<line;



    return 0;
    }
